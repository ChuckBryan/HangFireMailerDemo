
<hr/>
@model HangFireMailerDemo.Models.MovieQuote
<h2>Add your Movies Quote!</h2>
@using (Html.BeginForm("Create", "Home"))
{
    Html.EnableClientValidation();

    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.Movie)
        @Html.TextBoxFor(model => model.Movie, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(model => model.Movie)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CharacterName)
        @Html.TextBoxFor(model => model.CharacterName, new { @class = "form-control" , autocomplete = "off" })
        @Html.ValidationMessageFor(model => model.CharacterName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Quote)
        @Html.TextAreaFor(model => model.Quote, new { @class = "form-control", style = "min-height: 100px;" })
        @Html.ValidationMessageFor(model => model.Quote)
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}