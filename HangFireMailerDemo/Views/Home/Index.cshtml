@using HangFireMailerDemo.Models
@model IEnumerable<HangFireMailerDemo.Models.MovieQuote>
@{
    ViewBag.Title = "Movie Quotes Home Page";
    string errorMessage = ViewBag.ErrorMessage;
}

<div class="page-header">
    <h1>Do you have a favorite Movie Quote?</h1>
    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible" role="alert">@errorMessage</div>
    }

    <div >
        <a href="#" class="btn btn-sm btn-success" data-toggle="modal" data-target="#myModal">Let's Add It</a>
    </div>
</div>
@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">Looks like we don't have any Quotes, let's add some!</div>
}
@foreach (var item in Model)
{
    <blockquote>
        <p>@item.Quote</p>
        <footer>@item.CharacterName in @item.Movie</footer>
    </blockquote>
}


@using (Html.BeginForm("Create", "Home"))
{
    @Html.Partial("Create", new MovieQuote())
}